<section class="card">
    <div class="card-body">
        <div class="invoice">
            <header class="clearfix">
                <div class="row">
                    <div class="col-sm-6 mt-3">
                        <h2 class="h2 mt-0 mb-4 text-dark font-weight-bold">Criar Idioma</h2>
                        <!-- <h4 class="h4 m-0 text-dark font-weight-bold">#76598345</h4> -->
                    </div>
                    <div class="col-sm-6 mt-3">
                        <div class="m-0 mb-4 pull-right">
                            <a href="/backend/idioma/listar" class="mb-1 mt-1 mr-1 btn btn-primary"><strong>Voltar</strong></a>
                        </div>
                    </div>
                </div>
            </header>

            <div class="row">
							<div class="col-md-8">
                <section class="card mb-4">
                  <header class="card-header">
                    <h2 class="card-title">Principal</h2>
                  </header>
                  <div class="card-body">
                    <form class="form-horizontal form-bordered" method="post">

                      <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2" for="inputDefault">Nome</label>
                        <div class="col-lg-9">
                          <input type="text" id="idioma_nome" class="form-control" required>
                        </div>
                      </div>

                      <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2" for="inputDefault">Sigla</label>
                        <div class="col-lg-9">
                          <input type="text" id="idioma_sigla" class="form-control">
                        </div>
                      </div>

                      <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2" for="inputDefault">Icon</label>
                        <div class="col-lg-9">
                          <input type="text" id="idioma_icon" class="form-control">
                        </div>
                      </div>

                      <div class="form-group row">
                        <label class="col-lg-3 control-label text-lg-right pt-2" for="inputDefault">Ordem</label>
                        <div class="col-lg-9">
                          <input type="text" id="idioma_ordem" class="form-control">
                        </div>
                      </div>
               
                      <div class="form-group row">
             
                        <label class="col-sm-3 control-label text-sm-right pt-2">Em destaque</label>
                        <div class="btn-group col-sm-9 pull-right" data-toggle="buttons">
                       
                            <label class="btn btn-primary ">
                                <input type="radio" name="idioma_destaque" id="option1" autocomplete="off" value="sim"> SIM
                            </label>
                            <label class="btn btn-primary active">
                                <input type="radio" name="idioma_destaque" id="option2" autocomplete="off"  value="nao" checked> N√ÉO
                            </label>
                        </div>
                      </div> 
                      
                      <div class="form-group row">
             
                        <label class="col-sm-3 control-label text-sm-right pt-2">Status</label>
                        <div class="btn-group col-sm-9 pull-right" data-toggle="buttons">
                       
                            <label class="btn btn-primary ">
                                <input type="radio" name="idioma_status" id="option1" autocomplete="off" value="sim"> ATIVO
                            </label>
                            <label class="btn btn-primary active">
                                <input type="radio" name="idioma_status" id="option2" autocomplete="off"  value="nao" checked> INATIVO
                            </label>
                        </div>
                      </div> 
                
                    </form>
                  </div>
                </section>						
							</div>
						</div>  
            
            <div id="ref" class='clearfix'></div>  
            <span id="retorno" class="col-md-10"></span>            
            <a name="bt_idioma_cadastrar" id="bt_idioma_cadastrar"  href="javascript:;" class="btn btn-primary col-md-2 pull-right">Criar</a>
               
        </div>
    </div>
</section>
